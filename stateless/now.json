{
  "version": 2,
  "builds": [{
    "src": "now_stateless.js",
    "use": "@now/node",
    "config": { "maxLambdaSize": "50mb" }
  }, {
    "src": "counter.html",
    "use": "@now/static"
  }],
  "routes": [
    { "src": "/", "dest": "/now_stateless.js" },
    { "src": "/counter.html", "dest": "/counter.html" }
  ],
  "env": {
    "STATELESS_PUB_PEM": "@stateless-pub-pem",
    "STATELESS_PRIV_PEM": "@stateless-priv-pem"
  }
}
